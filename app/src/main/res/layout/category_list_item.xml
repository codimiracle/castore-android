<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/category_base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/category_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="16dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/category_tags_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/category_base"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/category_base"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/category_base"
        android:stretchColumns="0,1,2">

        <TableRow android:layout_weight="1">

            <TextView
                android:id="@+id/category_subtag_1"
                style="@style/CAStyle.PanelButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/category_subtag_2"
                style="@style/CAStyle.PanelButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/category_subtag_3"
                style="@style/CAStyle.PanelButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <TextView
                android:id="@+id/category_subtag_4"
                style="@style/CAStyle.PanelButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/category_subtag_5"
                style="@style/CAStyle.PanelButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/category_subtag_6"
                style="@style/CAStyle.PanelButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </TableRow>
    </TableLayout>


</RelativeLayout>