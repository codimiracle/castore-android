<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/som_app_summary"
    style="@style/CAStyle.Box"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@id/som_app_icon"
        style="@style/CAStyle.Icon"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/som_app_download"
        android:layout_toRightOf="@id/som_app_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/som_app_title"
            style="@style/CAStyle.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test App" />

        <TextView
            android:id="@+id/som_app_file_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12万人在用 | 23MB" />

        <TextView
            android:id="@+id/som_app_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="Hello World" />

    </LinearLayout>


    <TextView
        style="@style/CAStyle.Button"
        android:id="@id/som_app_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/app_download" />


</RelativeLayout>